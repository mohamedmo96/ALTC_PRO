@model IEnumerable<ALTC_WebSite.Models.Service>

@{
    string dir = "ltr";
    string lang = "en";
    Layout = "~/Views/Shared/_LayoutLtr.cshtml";
    if (ViewData["Dir"] != null & ViewData["Lang"] != null)
    {
        dir = ViewData["Dir"].ToString();
        lang = ViewData["Lang"].ToString();

        if (dir == "rtl")
        {
            Layout = "~/Views/Shared/_LayoutRtl.cshtml";
        }
    }
}
<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Photo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Details)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Photo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Details)
            </td>
            <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
     
                @Html.ActionLink("Delete", "Delete", new { id=item.id  })
            </td>
        </tr>
}
    </tbody>
</table>
