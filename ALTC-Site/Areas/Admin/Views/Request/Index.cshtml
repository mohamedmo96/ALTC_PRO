@using ALTC_Website.ViewModels
﻿
@model List<RequestVM>

@{
    
    ViewData["Title"] = "Index";
    int i = 1;
}

<div class="container">
    <h1 class="my-4">All Requests</h1>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Phone</th>
                <th scope="col">Email</th>
                <th scope="col">Options</th>
            </tr>
        </thead>
        <tbody>
            @foreach (RequestVM request in Model)
            {
                <tr>
                    <th scope="row">@(i++)</th>
                    <td>@request.Name</td>
                    <td>@request.Phone</td>
                    <td>@request.Email</td>
                    <td>
                        <a asp-controller="Request" asp-action="" class="btn btn-primary">Download </a>
                    </td>
                </tr>

            }

        </tbody>
    </table>
</div>