﻿
@model List<Request>

@{

    ViewData["Title"] = "Index";
    int i = 1;
}

<div class="container">
    <h1 class="my-4">All Requests</h1>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Phone</th>
                <th scope="col">Email</th>
                <th scope="col">Options</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Request request in Model)
            {
                <tr>
                    <th scope="row">@(i++)</th>
                    <td>@request.Name</td>
                    <td>@request.Phone</td>
                    <td>@request.Email</td>
                    <td>@request.FileName</td>

                    <td>
                        <a asp-controller="Request" asp-action="Download" asp-route-FileName="@request.FileName" class="btn btn-primary">Download </a>
                    </td>
                </tr>

            }

        </tbody>
    </table>
</div>